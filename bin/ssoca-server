#!/bin/sh

cd "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."

source .envrc

exec go run \
  -ldflags "
    -X main.appSemver=${version:-0.0.0+dynamic}
    -X main.appCommit=$( git rev-parse HEAD | cut -c-10 )$( git diff-index --quiet HEAD -- || echo "+dirty" )
  " \
  cli/server/server.go \
  "$@"
